<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/cont_activity"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/back_slots"
        android:layout_marginTop="10dp">


        <ImageView
            android:id="@+id/time"
            android:layout_marginTop="10dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="false"
            android:src="@drawable/ic_clock" />


        <com.go.sport.custom.textview.RegularTextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/time"
            android:text="12:00 pm"
            android:textColor="@color/purple_500"
            android:textSize="15sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="8dp"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/start_time"
            android:background="@color/purple_500" />


        <com.go.sport.custom.textview.RegularTextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/view2"
            android:text="2:45 am"
            android:textColor="@color/purple_500"
            android:textSize="15sp" />


        <com.go.sport.custom.textview.RegularTextView
            android:id="@+id/amount"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_purple_dotted"
            android:text="PKR 250"
            android:textColor="@color/purple_dark"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/ic_duration"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/time"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_sand_clock"
            app:tint="@color/purple_dark" />


        <com.go.sport.custom.textview.RegularTextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/time"
            android:layout_toEndOf="@+id/ic_duration"
            android:text="1.5 Hours"
            android:textColor="@color/purple_500"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_activity_status"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="64dp">

        <com.go.sport.custom.textview.RegularTextView
            android:id="@+id/tv_slot_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_centerInParent="true"
            android:text="Available"
            android:textColor="@color/white"
            android:textSize="9sp" />

    </RelativeLayout>



</RelativeLayout>