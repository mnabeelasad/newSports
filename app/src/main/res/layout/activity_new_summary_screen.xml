<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newui.NewSummaryScreen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_upload_picture" />

    <RelativeLayout
        android:id="@+id/cont_app_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_app_bar"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:padding="5dp"
            app:srcCompat="@drawable/arrow_left" />

        <com.go.sport.custom.textview.MediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/ic_back"
            android:text="Summary"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cont_btns"
        android:layout_below="@+id/cont_app_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cont_app_bar">

            <LinearLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@drawable/bg_joined"
                    android:gravity="center|start">

                    <RelativeLayout
                        android:id="@+id/iv_image"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ic_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/iv_image">

                        <LinearLayout
                            android:id="@+id/cont_sports"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iv_sports"
                                android:layout_width="38dp"
                                android:layout_height="38dp"
                                app:tint="@color/purple_dark" />

                            <com.go.sport.custom.textview.BoldTextView
                                android:id="@+id/tv_sports_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textSize="11sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cont_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.go.sport.custom.textview.BoldTextView
                                    android:id="@+id/tv_user"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:textColor="@color/dark_gray" />


                                <ImageView
                                    android:id="@+id/ic_chat"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="10dp"
                                    android:src="@drawable/icon_chat"
                                    app:tint="@color/purple_dark" />
                            </LinearLayout>

                            <com.go.sport.custom.textview.BoldTextView
                                android:id="@+id/tv_org"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_user"
                                android:text="ORGANIZER"
                                android:textAllCaps="true"
                                android:textColor="@color/black"
                                android:textSize="11sp" />

                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_org"

                                >

                                <com.go.sport.custom.textview.RegularTextView
                                    android:id="@+id/tv_gender"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                                <View
                                    android:layout_width="0.8dp"
                                    android:layout_height="15dp"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginEnd="7dp"
                                    android:background="@color/black" />

                                <com.go.sport.custom.textview.RegularTextView
                                    android:id="@+id/tv_age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>

                        <!--Only show in booking is done-->
                        <!--                <com.go.sport.custom.textview.RegularTextView-->
                        <!--                    android:id="@+id/tv_booking_id"-->
                        <!--                    android:layout_width="wrap_content"-->
                        <!--                    android:layout_height="wrap_content"-->
                        <!--                    android:text="Booking ID :"-->
                        <!--                    android:layout_marginEnd="10dp"-->
                        <!--                    android:layout_toLeftOf="@+id/cont_sports"-->
                        <!--                    android:padding="3dp"-->
                        <!--                    android:textColor="@color/white"-->
                        <!--                    android:textSize="10sp"-->
                        <!--                    android:background="@drawable/bg_activity_status"-->
                        <!--                    android:layout_centerVertical="false"-->
                        <!--                    android:layout_marginTop="5dp"-->
                        <!--                    />-->


                    </RelativeLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_location"
                        app:tint="@color/purple_dark" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <com.go.sport.custom.textview.RegularTextView
                            android:id="@+id/tv_title"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/purple_dark_3"
                            android:textSize="14sp" />

                        <com.go.sport.custom.textview.RegularTextView
                            android:id="@+id/tv_pitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_title"
                            android:textColor="@color/dark_gray"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/location"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:layout_toRightOf="@+id/tv_title"
                            android:src="@drawable/ic_direction"
                            app:tint="#3D9341" />

                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:padding="1dp"
                        android:src="@drawable/icon_calendar"
                        app:tint="@color/purple_dark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"

                            android:orientation="vertical">

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/tv_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:textColor="@color/purple_dark_3"
                                android:textSize="14sp" />

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/date_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_date"
                                android:textColor="@color/dark_gray"
                                android:textSize="12sp" />


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:padding="1dp"
                            android:src="@drawable/icon_clock_purple" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time"
                                android:textColor="@color/purple_dark_3"
                                android:textSize="14sp" />

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/time_zone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_time"
                                android:textColor="@color/dark_gray"
                                android:textSize="12sp" />


                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_agegroup"
                        app:tint="@color/purple_dark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"

                            android:orientation="vertical">

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/tv_agegroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Age Group"
                                android:textColor="@color/purple_dark_3"
                                android:textSize="14sp" />

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/age_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_agegroup"
                                android:textColor="@color/dark_gray"
                                android:textSize="12sp" />


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_skill"
                            app:tint="@color/purple_dark" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"

                            android:orientation="vertical">

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/tv_skill"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Skill"
                                android:textColor="@color/purple_dark_3"
                                android:textSize="14sp" />

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/skill_set"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_skill"
                                android:textColor="@color/dark_gray"
                                android:textSize="12sp" />


                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon_football_player"
                        app:tint="@color/purple_dark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"

                            android:orientation="vertical">

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/tv_players_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Players"
                                android:textColor="@color/purple_dark_3"
                                android:textSize="14sp" />

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/total_players_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_players_total"
                                android:textColor="@color/dark_gray"
                                android:textSize="12sp" />


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_football_player"
                            app:tint="@color/purple_dark" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"

                            android:orientation="vertical">

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/tv_players"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Confirmed Players"
                                android:textColor="@color/purple_dark_3"
                                android:textSize="14sp" />

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/confrm_players"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_players"
                                android:textColor="@color/dark_gray"
                                android:textSize="12sp" />


                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:padding="1dp"
                        android:src="@drawable/ic_icon_wallet24"
                        app:tint="@color/purple_dark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/player_costing"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/tv_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cost per player"
                                android:textColor="@color/purple_dark_3"
                                android:textSize="14sp" />

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/player_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_cost"
                                android:textColor="@color/dark_gray"
                                android:textSize="12sp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/slots_costing"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/tv_slot_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Slot Price"
                                android:textColor="@color/purple_dark_3"
                                android:textSize="14sp" />

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/slot_cost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_slot_cost"
                                android:text="80 PKR"
                                android:textColor="@color/dark_gray"
                                android:textSize="12sp" />


                        </RelativeLayout>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_payment_type"
                            app:tint="@color/purple_dark" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/tv_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Type"
                                android:textColor="@color/purple_dark_3"
                                android:textSize="14sp" />

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/payment_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_type"
                                android:textColor="@color/dark_gray"
                                android:textSize="12sp" />


                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_venue_facilities"
                        app:tint="@color/purple_dark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <com.go.sport.custom.textview.RegularTextView
                            android:id="@+id/tv_facilties"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Venue Facilities"
                            android:textColor="@color/purple_dark_3"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_amenities"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:overScrollMode="ifContentScrolls"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_3" />


                <LinearLayout
                    android:id="@+id/additional_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_info"
                        app:tint="@color/purple_dark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <com.go.sport.custom.textview.RegularTextView
                            android:id="@+id/tv_additional_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Additional Info"
                            android:textColor="@color/purple_dark_3"
                            android:textSize="14sp" />

                        <com.go.sport.custom.textview.RegularTextView
                            android:id="@+id/tv_add_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_cost"
                            android:text="This is additional information"
                            android:textColor="@color/dark_gray"
                            android:textSize="12sp" />


                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/extra"
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="top"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_playersjoined"
                        app:tint="@color/purple_dark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/tv_players_joined"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Players Joined"
                                android:textColor="@color/purple_dark_3"
                                android:textSize="14sp" />


                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/tv_view_all"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:text="@string/view_all"
                                android:textColor="@color/grey_2"
                                android:textSize="12sp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_players"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:overScrollMode="ifContentScrolls"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                            <com.go.sport.custom.textview.RegularTextView
                                android:id="@+id/players_list"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No players joined yet"
                                android:textColor="@color/dark_gray"
                                android:textSize="12sp"
                                android:visibility="gone" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_3" />


            </LinearLayout>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/cont_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:id="@+id/back_activity"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_grad_purple">

            <com.go.sport.custom.textview.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Back to Home"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cont_cancel_activity"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_grad_purple">

            <com.go.sport.custom.textview.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Cancel Activity"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cont_leave_activity"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_grad_purple"
            android:visibility="gone">

            <com.go.sport.custom.textview.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Leave Activity"
                android:textColor="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cont_join_activity"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_grad_purple"
            android:visibility="gone">

            <com.go.sport.custom.textview.RegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Join Activity"
                android:textColor="@color/white" />

        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>