<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginEnd="6dp"
    android:layout_marginTop="8dp"
    android:layout_height="40dp"
    android:id="@+id/main"
    android:gravity="center"
    android:background="@drawable/bg_amenities_unselected">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_amenities"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="2dp"
        android:padding="2dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon_parking" />

    <com.go.sport.custom.textview.RegularTextView
        android:id="@+id/tv_amenities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="2dp"
        android:text="Parking"
        android:textColor="#253D52"
        android:textSize="12sp" />

</LinearLayout>